{% extends '@theme/layouts/master.twig' %}

{% block title %}{{ meta.title }}{% endblock %}

{% block content %}
    <header class="intro-header" style="background-image: url('{{ themeDir }}/assets/img/robots.png')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>{{ meta.title }}</h1>
                        <hr class="small">
                        <span class="subheading">{{ meta.summary }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {% set posts = query({'type': 'post', 'orderBy': 'published DESC', 'limit': 5}) %}
                {% for post in posts %}
                    <div class="post-preview">
                        <a href="/{{ post.id }}">
                            <h2 class="post-title">{{ post.title }}</h2>
                            <h3 class="post-subtitle">{{ post.summary }}</h3>
                        </a>
                        <p class="post-meta">Posted by <a href="#">{{ post.author }}</a> on September 24, 2014</p>
                    </div>
                    <hr>
                {% endfor %}
                {% set pager = paginator(posts) %}
                <ul class="pager">
                    {% if pager.hasPrevious() %}
                        <li class="previous">
                            <a href="{{ baseUrl }}?page={{ pager.getPreviousPage() }}">&larr; Newer Posts</a>
                        </li>
                    {% endif %}
                    {% if pager.hastNext() %}
                        <li class="next">
                            <a href="{{ baseUrl }}?page={{ pager.getNextPage() }}">Older Posts &rarr;</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}