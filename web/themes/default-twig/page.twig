{% extends '@theme/layouts/master.twig' %}

{% block title %}{{ meta.title }}{% endblock %}

{% block content %}
    <header class="intro-header" style="background-image: url('{{ themeDir }}/assets/img/robots.png')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>{{ meta.title }}</h1>
                        <hr class="small">
                        <span class="subheading">{{ meta.summary }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {{ content | raw }}
            </div>
        </div>
    </div>
{% endblock %}